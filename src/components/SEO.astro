---
export interface Props {
  title: string;
  description: string;
  canonicalURL?: URL | string;
}

const { description, title, canonicalURL = new URL(Astro.url.pathname, Astro.site) } = Astro.props;

const siteName = "SamTheQ Blog";
// const ensureTrailingSlash = (url: string | URL) => url.toString().replace(/\/$/, "") + "/"
---

<meta name="mobile-web-app-capable" content="yes" />
<meta name="robots" content="follow, index" />
<meta name="apple-mobile-web-app-title" content={siteName} />

<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL.toString()} />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" href="/rss.xml" title="RSS" />

<meta name="og:site_name" property="og:site_name" content={siteName} />
<meta name="og:type" property="og:type" content="article" />
<meta property="og:description" content={description} />
<meta property="og:title" content={title} />
<meta property="og:image" content="https://samtheq.com/Logo_866.png" />
<meta property="og:image:alt" content="SamTheQ logo" />
<meta property="og:image:type" content="image/png" />
<meta property="og:url" content={canonicalURL.toString()} />

<!-- Twitter -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@SamuelQuinones1" />
<meta name="twitter:creator" content="@SamuelQuinones1" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
